doctype html
html
  head
    title Successful
    style.
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .card {
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
      }
      .pageTitle {
        color: #333;
        text-align: center;
        font-size: 20px;
        font-weight: 600;
      }
      .backButton {
        display: block;
        text-align: center;
        text-decoration: none;
        background-color: #1b6fc3;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        font-size: 18px;
        width: 40%;
        margin: 20px auto 10px auto;
      }
      .backButton:hover {
        text-decoration: underline;
        background-color: #13579b;
      }
  body
    div(class='container')
      div(class='card')
        div(class='pageTitle') #{message}
        a(href='/orders', class='backButton') Back
